<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cw8_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            bind:layout_conversion_absoluteHeight="32dp"
            bind:layout_conversion_absoluteWidth="1dp"
            bind:layout_editor_absoluteX="192dp"
            bind:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/cw8_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            bind:layout_conversion_absoluteHeight="32dp"
            bind:layout_conversion_absoluteWidth="1dp"
            bind:layout_editor_absoluteX="192dp"
            bind:layout_editor_absoluteY="32dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bind:layout_conversion_absoluteHeight="48dp"
            bind:layout_conversion_absoluteWidth="48dp"
            bind:layout_editor_absoluteX="168dp"
            bind:layout_editor_absoluteY="64dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclePR"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        bind:layout_conversion_absoluteHeight="455dp"
        bind:layout_conversion_absoluteWidth="384dp"
        bind:layout_editor_absoluteX="172dp" />

    </android.support.constraint.ConstraintLayout>

