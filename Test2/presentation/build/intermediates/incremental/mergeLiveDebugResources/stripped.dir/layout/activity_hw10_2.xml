<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent" android:tag="layout/activity_hw10_2_0" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:tag="binding_1"                        
        android:text="save"
        android:background="@drawable/button_selector"/>
<EditText
    android:id="@+id/editText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Full name"
    android:drawableLeft="@drawable/ic_cloud_black_24dp"
    android:drawablePadding="5dp"
    android:layout_below="@id/b"
    android:tag="binding_2"              />

<EditText
    android:id="@+id/editText3"
    android:drawableLeft="@drawable/ic_timelapse_black_24dp"
    android:drawablePadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editText"
    android:hint="Age"
    android:inputType="number"
    android:tag="binding_3"                                   />



</RelativeLayout>
             